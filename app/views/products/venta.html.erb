<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-xs-8 col-sm-10 col-md-10">
    <h1 class="text-center text-secondary">Productos</h1>
  </div>

  <div class="text-letf">
    <%= link_to 'Volver', products_path, class: "btn btn-warning"  %>
  </div>


  <div class="row">
    <% @products.each do |product| %>
      <% if user_signed_in? && (current_user.id == product.user_id) %>
    <div class="col-sm-4">
      <div class="thumbnail">
        <figure>

          <%= image_tag(product.picture, class: 'img-responsive') if product.picture? %>
        </figure>


        <div class="caption text-center">

          <h3>  <%= product.nombre %></h3>

          <h3><%= product.descripcion %></h3>



          <h3>    <%= product.precio %></h3>
          <p><small><%= time_ago_in_words(product.created_at) %> ago</small></p>


          <%= link_to 'Edit', edit_product_path(product), class: "btn btn-succes" %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %>

          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
